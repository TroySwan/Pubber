<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/pubberLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="81dp"
        android:text="PUBBER"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pubScroller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <ImageView
        android:id="@+id/pubPic"
        android:layout_width="306dp"
        android:layout_height="248dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/border"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pubberLogo"
        tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

    <TextView
        android:id="@+id/pubName"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:text="Pub Name Not Found"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pubPic" />

    <TextView
        android:id="@+id/dogFriendlyMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Dog Friendly"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pubName" />

    <TextView
        android:id="@+id/servesFoodMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Serves Food"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogFriendlyMI" />

    <TextView
        android:id="@+id/realAleMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Real Ale"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servesFoodMI" />

    <TextView
        android:id="@+id/danceFloorMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Dance Floor"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realAleMI" />

    <TextView
        android:id="@+id/liveMusicMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Live Music"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danceFloorMI" />

    <TextView
        android:id="@+id/poolTableMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Pool Table"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveMusicMI" />

    <ImageView
        android:id="@+id/dogFriendlyCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pubName"
        app:srcCompat="@drawable/check_blank" />

    <ImageView
        android:id="@+id/servesFoodCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogFriendlyCMI"
        app:srcCompat="@drawable/check_blank" />

    <ImageView
        android:id="@+id/realAleCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servesFoodCMI"
        app:srcCompat="@drawable/check_blank" />

    <ImageView
        android:id="@+id/danceFloorCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realAleCMI"
        app:srcCompat="@drawable/check_blank" />

    <ImageView
        android:id="@+id/liveMusicCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danceFloorCMI"
        app:srcCompat="@drawable/check_blank" />

    <ImageView
        android:id="@+id/poolTableCMI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveMusicCMI"
        app:srcCompat="@drawable/check_blank" />

    <ImageButton
        android:id="@+id/showMap"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:contentDescription="show on map"
        android:scaleType="centerInside"
        android:state_focused="true"
        android:onClick="showMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poolTableMI"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/map_button" />

    <ImageButton
        android:id="@+id/moreInfo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:contentDescription="more info"
        android:scaleType="centerInside"
        android:onClick="showMoreInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poolTableCMI"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/more_button" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

</android.support.constraint.ConstraintLayout>